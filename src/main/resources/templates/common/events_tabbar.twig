	<a href="/my/events/invites" class="{%if tab=="invites"%}selected{%endif%}">{{ L('group_invitations')}} ({{ userNotifications.newEventInvitationsCount }})</a>
	{%endif%}
	<span class="aux"><a href="/my/events/create" data-ajax-box="1">{{ L('create_event') }}</a></span>
</div>
