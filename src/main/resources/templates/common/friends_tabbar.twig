<div class="tabbar">
	<a href="/users/{{ owner.id }}/friends" class="{%if tab=="friends"%}selected{%endif%}">{{ currentUser is not null and currentUser.id==owner.id ? L('friends') : LI(key='user_friends', first=owner.firstName, gender=owner.gender) }}</a>
	{% if mutualCount>0 %}
	<a href="/users/{{ owner.id }}/friends/mutual" class="{%if tab=="mutual"%}selected{%endif%}">{{LP('X_mutual_friends_short', mutualCount)}}</a>
	{% endif %}
	<a href="{{owner.getProfileURL('followers')}}" class="{%if tab=="followers"%}selected{%endif%}">{{L('followers')}}</a>
	<a href="{{owner.getProfileURL('following')}}" class="{%if tab=="following"%}selected{%endif%}">{{L('following')}}</a>
	{%if currentUser is not null and currentUser.id==owner.id%}
	{%if userNotifications.newFriendRequestCount>0%}
	<a href="/my/incomingFriendRequests" class="{%if tab=="requests"%}selected{%endif%}">{{ L('friend_requests')}} ({{ userNotifications.newFriendRequestCount }})</a>
	{%endif%}
	{%endif%}
	<a href="{{ owner.profileURL }}" class="aux">{{ L('back_to_profile') }}</a>
</div>
